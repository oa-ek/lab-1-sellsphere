@using SellSphere.Core
@model SellSphere.Repository.Dto.GoodsDto.GoodsCreateDto
@{
    var categories = ViewBag.Categories as IEnumerable<Category>;
    var activities = ViewBag.Activities as IEnumerable<Activity>;
    var conditions = ViewBag.Conditions as IEnumerable<Condition>;
 
    var deliveries = ViewBag.Deliveries as IEnumerable<Delivery>;
    var locations = ViewBag.Locations as IEnumerable<Location>;
    Layout = "~/Views/Shared/_BreezeLayout.cshtml";

}
<div class="content-wrapper pb-0 text-center">
    <h4>Додавання товару</h4>
    <hr />

    <div class="col-12 grid-margin">
        <div class="card">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <h4 class="card-title">Horizontal Two column</h4>
                    <div class="form-sample">
                        <p class="card-description">Personal info</p>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" asp-for="GoodsName"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="GoodsName" class="form-control" />
                                        <span asp-validation-for="GoodsName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" asp-for="Description"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="form-group">
                                        <label class="control-label" </label>

                                    </div>
                                    <label class="col-sm-3 col-form-label" asp-for="Price"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" asp-for="PhoneNumber"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" asp-for="ImgPath"></label>
                                    <div class="col-sm-9">
                                        <input asp-for="ImgPath" class="form-control" />
                                        <span asp-validation-for="ImgPath" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryName" class="control-label">Категорії</label>
                            <select asp-for="CategoryName" name="categoryName" id="categoryName" class="form-select" required>
                                <option selected disabled>Choose...</option>
                                @foreach (var u in categories)
                                {
                                    <option value="@u.CategoryName">@u.CategoryName</option>
                                }
                            </select>
                            <div class="m-1">
                                <a href="/Category/Create" class="btn btn-outline-primary">Додайте категорію</a>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ActivityName" class="control-label">Активності</label>
                            <select asp-for="ActivityName" name="activityName" id="activityName" class="form-select" required>
                                <option selected disabled>Choose...</option>
                                @foreach (var u in activities)
                                {
                                    <option value="@u.ActivityName">@u.ActivityName</option>
                                }
                            </select>
                            <div class="m-1">
                                <a href="/Activity/Create" class="btn btn-outline-primary">Додайте активність</a>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConditionName" class="control-label">Стан</label>
                            <select asp-for="ConditionName" name="conditionName" id="conditionName" class="form-select" required>
                                <option selected disabled>Choose...</option>
                                @foreach (var u in conditions)
                                {
                                    <option value="@u.ConditionName">@u.ConditionName</option>
                                }
                            </select>
                            <div class="m-1">
                                <a href="/Condition/Create" class="btn btn-outline-primary">Додайте активність</a>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="DeliveryName" class="control-label">Доставка</label>
                            <select asp-for="DeliveryName" name="deliveryName" id="deliveryName" class="form-select" required>
                                <option selected disabled>Choose...</option>
                                @foreach (var u in deliveries)
                                {
                                    <option value="@u.DeliveryName">@u.DeliveryName</option>
                                }
                            </select>
                            <div class="m-1">
                                <a href="/Delivery/Create" class="btn btn-outline-primary">Додайте спосіб доставки</a>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="LocationName" class="control-label">Локація</label>
                            <select asp-for="LocationName" name="locationName" id="locationName" class="form-select" required>
                                <option selected disabled>Choose...</option>
                                @foreach (var u in locations)
                                {
                                    <option value="@u.LocationName">@u.LocationName</option>
                                }
                            </select>
                            <div class="m-1">
                                <a href="/Location/Create" class="btn btn-outline-primary">Додайте місто</a>
                            </div>
                        </div>
                       
                      

                           <div class="row">

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
            </form>
            <!--сторого залишити-->
        </div>
    </div>
</div></div>
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function() {
            $(".form-select").select2();
        });
    </script>
}
