@model IEnumerable<SellSphere.Core.Category>
@{
    ViewData["Title"] = "Каталог Категорій";
    Layout = "~/Views/Shared/_BreezeLayout.cshtml";
}


    <div class="card">
        <div class="card-body">
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>

                            <td>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.CategoryId">Редагувати</a>
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.CategoryId">Деталі</a>
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Delete" asp-route-id="@item.CategoryId">Видалити</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>